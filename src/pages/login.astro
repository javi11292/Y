---
import Form from "$lib/components/form";
import Layout from "$lib/layouts/root-layout.astro";

const fields = {
	email: {
		name: "email",
		label: "Email",
	},
	password: {
		name: "password",
		label: "Contraseña",
		type: "password",
	},
};

Astro.response.headers.set("Cache-Control", "public, max-age=31536000");
---

<Layout title="Login" skipCache>
	<Form title="Login" {fields} api="login">
		¿No tienes cuenta? <a href="/register">Regístrate</a>
	</Form>
</Layout>
