---
import "$lib/commons/assets/global.scss";
import { ViewTransitions } from "astro:transitions";
import Snackbar from "$lib/commons/components/snackbar";

interface Props {
	title: string;
}

const { title } = Astro.props;

Astro.response.headers.set("Vary", "Cookie");
Astro.response.headers.set("Cache-Control", "private, max-age=3600");

if (Astro.request.headers.get("Cache-Control")) {
	Astro.cookies.set("version", Date.now().toString());
}
---

<html lang="en">
	<head>
		<title>{title}</title>
		<meta name="description" content="Y" />
		<meta name="theme-color" content="#000000" />
		<meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1" />
		<meta charset="utf-8" />
		<link rel="icon" href="/favicon.ico" />
		<link rel="apple-touch-icon" href="/192x192.png" />
		<link rel="manifest" href="/manifest.json" />
		<ViewTransitions />
	</head>

	<body>
		<div class="content">
			<slot />
		</div>

		<Snackbar client:idle />

		<script>
			if (import.meta.env.PROD && navigator.serviceWorker) {
				navigator.serviceWorker.register("/service-worker.js");
			}
		</script>

		<style lang="scss">
			html {
				scrollbar-gutter: auto;
			}

			.content {
				height: 100dvh;
				position: relative;

				> :global(:not(astro-island)),
				> :global(astro-island > *) {
					height: 100%;
					scrollbar-gutter: stable;
					overflow: var(--overflow, auto);

					> :global(:not(astro-island)),
					> :global(astro-island > *) {
						position: relative;
						left: 50%;
						translate: -50%;
						max-width: 640px;
					}
				}
			}
		</style>
	</body>
</html>
